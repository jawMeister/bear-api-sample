{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "rules": {
        "semi": 2,
        "no-console": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    }
}
